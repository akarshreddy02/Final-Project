<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFoodItemServlet</servlet-name>
        <servlet-class>servlets.AddFoodItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>servlets.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SurplusItemsServlet</servlet-name>
        <servlet-class>servlets.SurplusItemsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CharitableItemsServlet</servlet-name>
        <servlet-class>servlets.CharitableItemsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsumerItemsServlet</servlet-name>
        <servlet-class>servlets.ConsumerItemsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFoodItemServlet</servlet-name>
        <url-pattern>/AddFoodItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SurplusItemsServlet</servlet-name>
        <url-pattern>/SurplusItemsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CharitableItemsServlet</servlet-name>
        <url-pattern>/CharitableItemsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsumerItemsServlet</servlet-name>
        <url-pattern>/ConsumerItemsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file/>
</web-app>
